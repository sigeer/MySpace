            </div>
        </div>
        <div id="sigeer-main-content">
            <div class="sigeer-post">
                <div class="sigeer-entry padding">
                    <div v-html="model.content">
                    </div>
                    <hr />
                    <hr />
                    <div id="comment" class="panel panel-default">
                        <div class="panel-heading">评论</div>
                        <div class="panel-body">
                            <div>
                                <div v-for="x in existComments">
                                    <small>{{x.guest.ip}}&nbsp;({{x.createTime}})</small>
                                    <p>{{x.content}}</p>
                                    <hr />
                                </div>
                            </div>
                            <div class="form-inline">
                                <div class="form-group">
                                    <label>邮箱地址：</label>
                                    <input type="text" class="form-control" v-model="commentModel.Email" placeholder="交易" />
                                </div>

                            </div>
                            <textarea class="form-control" style="resize:none" v-model="commentModel.Comment"></textarea>
                            <button class="btn btn-default" v-on:click="postComment" style="margin-left:90%">评论</button>
                        </div>
                    </div>

                </div>

            </div>
        </div>
