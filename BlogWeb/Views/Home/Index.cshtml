@{
    ViewData["Title"] = "Index";
    Layout = null;
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <script src="https://cdn.bootcss.com/vue/2.5.13/vue.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans:300,400,500,700,800" rel="stylesheet">

    <!-- Animate.css -->
    <link rel="stylesheet" href="/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="/css/icomoon.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="/css/bootstrap.css">

    <!-- Theme style  -->
    <link rel="stylesheet" href="/css/style.css">

    <!-- Modernizr JS -->
    <script src="/js/modernizr-2.6.2.min.js"></script>
    <script src="~/js/sigeerUtility.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="js/respond.min.js"></script>
    <![endif]-->
</head>
<body>

    <div id="page">
        <!-- background-image: url(../images/image_1.jpg) -->
        <div class="sigeer-loader" v-show="pageLoad"></div>
        <div class="sigeer-aside" style="background-color:black">
            <div class="overlay"></div>
            <nav role="navigation">
                <ul>
                    <li><a href="/Home/Index"><i class="icon-home"></i></a></li>
                </ul>
            </nav>
            <div class="featured">
                <h2>Sigeer</h2>
            </div>
        </div>
        <div id="sigeer-main-content">
            <div class="sigeer-post">
                <div class="sigeer-entry padding" v-for="x in titleList">
                    <img src="~/images/head.png">
                    <div>
                        <span class="sigeer-post-date">{{x.createTime}}</span>
                        <h2><a v-on:click="getArticle(x.id)" style="cursor:pointer">{{x.name}}</a></h2>
                        <p>{{x.description}}<span v-show="(x.description!=null)&&(x.description.length>100)" v-on:click="getArticle(x.id)" style="cursor:pointer">...</span></p>
                    </div>
                </div>
                <footer>
                    <div>
                        &copy; {{new Date().getFullYear()}} - sigeer Powered By Asp.Net Core
                    </div>
                </footer>
            </div>
        </div>
    </div>

    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="/js/jquery.waypoints.min.js"></script>
    <!-- Stellar Parallax -->
    <script src="/js/jquery.stellar.min.js"></script>
    <!-- Main -->
    <script src="/js/main.js"></script>
    <script>
        var api = 'http://localhost:8082';
        var token = localStorage.getItem("token");
        var titleContent = new Vue({
            el: '#page',
            data: {
                titleList: [],
                pageLoad: true,
                index: 1,
                count: 10,
            },
            mounted() {
                this.initData();
                this.scrollBottem();
            },
            methods: {
                scrollBottem: function () {
                    $(window).scroll(function (event) {
                        var wScrollY = window.scrollY; // 当前滚动条位置
                        var wInnerH = window.innerHeight; // 设备窗口的高度（不会变）
                        var bScrollH = document.body.scrollHeight; // 滚动条总高度
                        if (wScrollY + wInnerH >= bScrollH) {
                            titleContent.index += 1;
                            titleContent.initData();
                        }
                    });
                },
                initData: function () {
                    this.pageLoad = true;
                    var _self = this;
                    $.ajax({
                        headers: {
                            'Authorization': 'Bearer ' + localStorage.getItem("token")
                        },
                        url: api + '/api/Content/GetTitles?index=' + _self.index + '&count=' + _self.count,
                        method: 'get',
                        success: function (data, status) {
                            _self.pageLoad = false;
                            for (var i = 0; i < data.data.length; i++) {
                                _self.titleList.push(data.data[i]);
                            }
                        }
                    });
                },
                getArticle: function (id) {
                    window.open('/Home/Article?AId=' + id);
                }
            },
        });
    </script>
</body>
</html>

