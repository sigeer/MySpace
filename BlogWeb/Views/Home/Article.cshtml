                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <ul>
                                        <li>1</li>
                                        <li>1</li>
                                        <li>1</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    <ul>
                                        <li>1</li>
                                        <li>1</li>
                                        <li>1</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />

                </div>

            </div>

        </div>

    </div>
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="icon-arrow-up"></i></a>
    </div>
    <nav class="navbar navbar-default navbar-static-bottom">
        <div class="container">
            <div id="footer">

            </div>
        </div>
    </nav>
    <script>
        function getQueryStringByName(name) {
            var result = location.search.match(new RegExp("[\?\&]" + name + "=([^\&]+)", "i"));
            if (result == null || result.length < 1) {
                return "";
            }
            return result[1];
        }
        $('#footer').html("&copy;" + new Date().getFullYear() + " - sigeer Powered By Asp.Net Core");
        var api = 'http://localhost:8082';
        var titleConten = new Vue({
            el: '#articleContent',
            data: {
                model: {},
                pageLoad: true,
                existComments: [],
                commentModel: { Email: '', Comment: '', AId: getQueryStringByName("AId") }
            },
            mounted() {
                this.initData();
            },
            methods: {
                initData: function () {
                    this.pageLoad = true;
                    //$(".sigeer-loader").fadeOut("slow");
                    var _self = this;
                    $.ajax({
                        url: api + '/api/Content/GetArticle?AId=' + getQueryStringByName("AId"),
                        method: 'get',
                        success: function (data, status) {
                            _self.pageLoad = false;
                            _self.model = data;
                            _self.getComment();
                        },
                        error: function () {
                            _self.pageLoad = false;
                        }
                    });
                },
                getComment: function () {
                    this.pageLoad = true;
                    var _self = this;
                    $.ajax({
                        url: api + '/api/Content/GetComment?AId=' + getQueryStringByName("AId"),
                        method: 'get',
                        success: function (data, status) {
                            _self.pageLoad = false;
                            _self.existComments = data;
                        },
                        error: function () {
                            _self.pageLoad = false;
                        }
                    });
                },
                postComment: function () {
                    if (!this.commentValid()) {
                        alert('别搞事');
                        return;
                    }
                    this.pageLoad = true;
                    var _self = this;
                    $.ajax({
                        url: api + '/api/Content/SendComment',
                        method: 'post',
                        contentType: 'application/json;charset=UTF-8',
                        data: JSON.stringify(_self.commentModel),
                        success: function (data, status) {
                            _self.pageLoad = false;
                            _self.getComment();
                        },
                        error: function () {
                            _self.pageLoad = false;
                        }
                    });
                },
                commentValid: function () {
                    var result = true;
                    if (String.isNullOrEmpty(this.commentModel.Comment)) {
                        result = false;
                    }
                    return result;
                }
            },
        });
    </script>
</body>
</html>

