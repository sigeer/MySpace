    <div id="articleContent">
        <div class="sigeer-loader" v-show="pageLoad"></div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 ">
                    <div class="row">
                        <div class="col-xs-2">
                        </div>
                        <div class="col-xs-8">
                            <div class="row">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <div class="bb">
                                            <h2 style="font-size: 42px;">{{model.title}}</h2>
                                            <small>{{model.createTime}}</small>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="form-group" v-html="model.content">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div id="comment" class="panel panel-default">
                                    <div class="panel-heading">{{existComments.length}}条评论</div>
                                    <div class="panel-body">
                                        <div>
                                            <div v-for="x in existComments">
                                                <small>{{x.guest.ip}}&nbsp;({{x.createTime}})</small>
                                                <p>{{x.content}}</p>
                                                <hr />
                                            </div>
                                        </div>
                                        <div class="form-inline">
                                            <div class="form-group">
                                                <label>联系方式（邮箱或其他）：</label>
                                                <input type="text" class="form-control" v-model="commentModel.Email" placeholder="交易" />
                                            </div>

                                        </div>
                                        <textarea class="form-control" style="resize:none" v-model="commentModel.Comment"></textarea>
                                        <button class="btn btn-default" v-on:click="postComment" style="margin-left:90%">评论</button>
                                    </div>
                                </div>
                            </div>
                        </div>
