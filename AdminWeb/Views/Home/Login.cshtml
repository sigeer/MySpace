@{
    ViewData["Title"] = "登录";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>准备搞事</title>

    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.css" rel="stylesheet">
    <!--external css-->
    <link href="/font-awesome/css/font-awesome.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/style-responsive.css" rel="stylesheet">
    <script src="~/js/MainJs/vue.min.js"></script>
    <script src="~/js/MainJs/sigeerUtility.js"></script>

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->

    <div id="login-page">
        <div class="container">

            <div class="form-login" id="mainDiv">
                <h2 class="form-login-heading">搞事</h2>
                <div class="login-wrap">
                    @*<input type="text" class="form-control" placeholder="User ID" autofocus>
                    <br>*@
                    <div class="thumbnail">
                        <img src="" id="qrCode" v-on:click="refreshCode" style="height:130px;"/>
                    </div>
                    <input type="password" v-model="pwd" class="form-control" placeholder="Password">
                    <label class="checkbox">
                        <span class="pull-right">
                            <a data-toggle="modal" style="cursor:pointer;" onclick="alert('没救了,重装系统吧_(:з」∠)_')">忘记密码</a>
                        </span>
                    </label>
                    <button class="btn btn-theme btn-block" v-on:click="login" type="submit"><i class="fa fa-lock"></i>登录</button>
                    <hr>

                    @*<div class="registration">
                        Don't have an account yet?<br />
                        <a class="" href="#">
                            Create an account
                        </a>
                    </div>*@

                </div>

                <!-- Modal -->
                <div aria-hidden="true" aria-labelledby="myModalLabel" role="dialog" tabindex="-1" id="myModal" class="modal fade">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                <h4 class="modal-title">Forgot Password ?</h4>
                            </div>
                            <div class="modal-body">
                                <p>Enter your e-mail address below to reset your password.</p>
                                <input type="text" name="email" placeholder="Email" autocomplete="off" class="form-control placeholder-no-fix">

                            </div>
                            <div class="modal-footer">
                                <button data-dismiss="modal" class="btn btn-default" type="button">Cancel</button>
                                <button class="btn btn-theme" type="button">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- modal -->

            </div>

        </div>
    </div>

    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <!--BACKSTRETCH-->
    <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
    <script>
        var api = 'http://localhost:8082';
        var beforDiv = new Vue({
            el: '#beforeDiv',
            data: {
                pageLoad: true,
            },
            methods: {
                showQrCode: function () {
                    this.pageLoad = false;
                }
            }
        });
        var loginInfo = new Vue({
            el: '#mainDiv',
            data: {
                pwd: '',
            },
            mounted() {
                this.pageLoad();
            },
            methods: {
                refreshCode: function () {
                    $.ajax({
                        url: api + '/api/Identity/GetQrCode',
                        method: 'get',
                        contentType: 'image/jpeg',
                        success: function (data) {
                            $('#qrCode').attr('src', 'data:image/jpeg;base64,' + data);
                        }
                    });
                },
                loginValid: function () {
                    if (String.isNullOrEmpty(this.pwd)) {
                        alert('你倒是输密码啊');
                        return false;
                    }
                    return true;
                },
                login: function () {
                    if (this.loginValid() == false) {
                        return;
                    }
                    $.ajax({
                        url: api + '/api/Identity/GetToken',
                        method: 'post',
                        data: { "": this.pwd },
                        success: function (data) {
                            if (data == 'Error') {
                                alert('error');
                            }
                            else {
                                if (window.localStorage) {
                                    localStorage.token = data;
                                    location.href = '/Home/Index'
                                } else {
                                    alert('This browser does NOT support localStorage');
                                }
                            }

                        }
                    });
                },
                pageLoad() {
                    this.refreshCode();
                },
            }
        })
    </script>


</body>
</html>


